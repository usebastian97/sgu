---
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<div class="mb-12 grid items-center gap-8 md:grid-cols-2 lg:gap-12">
  <div>
    <h1 class="mb-6 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl lg:text-6xl">
      {t('blog.title')}
    </h1>
    <p class="text-lg leading-relaxed text-gray-600 dark:text-gray-400">
      Insights on cloud architecture, AI, DevOps, and modern software development practices.
    </p>
  </div>
  <div class="flex justify-center md:justify-end">
    <img src="/home/learn-cloud-girls.png" alt="Learn Cloud Girls" class="h-auto w-80 sm:w-80" loading="lazy" />
  </div>
</div>
