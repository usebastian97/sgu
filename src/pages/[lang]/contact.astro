---
import MainLayout from '@layouts/MainLayout.astro';
import ContactHero from '../contact/components/ContactHero.astro';
import ContactForm from '../contact/components/ContactForm.astro';
import ContactInfo from '../contact/components/ContactInfo.astro';
import { languages, type Language } from '@i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Language };
---

<MainLayout lang={lang}>
  <ContactHero lang={lang} />
  <section class="bg-white py-16 dark:bg-black">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2">
        <ContactForm lang={lang} />
        <ContactInfo lang={lang} />
      </div>
    </div>
  </section>
</MainLayout>
