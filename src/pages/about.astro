---
import MainLayout from '@layouts/MainLayout.astro';
import AboutHero from './about/components/AboutHero.astro';
import ProfessionalSummary from './about/components/ProfessionalSummary.astro';
import SkillsGrid from './about/components/SkillsGrid.astro';
import ExperienceTimeline from './about/components/ExperienceTimeline.astro';
import Certifications from './about/components/Certifications.astro';
import { useTranslations } from '@i18n/utils';

const lang = 'en';
const t = useTranslations(lang);
---

<MainLayout title={`${t('about.title')} | Sebastian Georgian Utoiu`} lang={lang}>
  <AboutHero lang={lang} />

  <!-- Main Content -->
  <section class="bg-white py-16">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <ProfessionalSummary lang={lang} />
      <SkillsGrid lang={lang} />
      <ExperienceTimeline lang={lang} />
      <Certifications lang={lang} />
    </div>
  </section>
</MainLayout>
