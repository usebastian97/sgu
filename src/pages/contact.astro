---
import MainLayout from '@layouts/MainLayout.astro';
import ContactHero from './contact/components/ContactHero.astro';
import ContactForm from './contact/components/ContactForm.astro';
import ContactInfo from './contact/components/ContactInfo.astro';
import { useTranslations } from '@i18n/utils';

const lang = 'en';
const t = useTranslations(lang);
---

<MainLayout title={`${t('contact.title')} | Sebastian Georgian Utoiu`} lang={lang}>
  <section class="bg-white py-20 dark:bg-black">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <ContactHero lang={lang} />

      <div class="grid gap-12 lg:grid-cols-2">
        <ContactForm lang={lang} />
        <ContactInfo lang={lang} />
      </div>
    </div>
  </section>
</MainLayout>
